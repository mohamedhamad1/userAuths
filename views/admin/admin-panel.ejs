<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="card-header">
                    Users Signed with Local Strategy
                </div>
                <div class="card-body">
                    <% localusers.forEach(user => { %>
                        <div class="card mb-3">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <%= user.username %>
                                    <p><%= user.email %></p>
                                </h5>
                                <% if (locals.user.id != user._id) { %>
                                    <a href="/admin/delete_user/<%= user._id %>" class="btn btn-sm btn-danger delete-btn">Delete</a>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="card-header">
                    Users Signed with Google Strategy
                </div>
                <div class="card-body">
                    <% googleusers.forEach(user => { %>
                        <div class="card mb-3">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <%= user.username %>
                                    <p><%= user.email %></p>
                                </h5>
                                <a href="/admin/delete_user/<%= user._id %>" class="btn btn-sm btn-danger delete-btn">Delete</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>