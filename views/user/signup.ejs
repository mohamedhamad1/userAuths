<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6 offset-md-3">
                <div class="signup-container">
                    <h2 class="text-center mb-4">Create an Account</h2>
                    <%- include('../partials/flashMessages.ejs') %>
                    <form action="/signup" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Username" name="username" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" name="email" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password" name="password" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Confirm Password" name="confirm_password" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-signup">Sign Up</button>
                        </div>
                    </form>
                    <div class="text-center mb-3">
                        <a href="/auth/google" class="btn btn-light btn-lg">
                            <img src="/imgs/google-logo.jpg" alt="Google Logo" class="img-fluid rounded-circle" style="max-width:30px;">
                            o with Google
                        </a>
                    </div>
                    <div class="text-center">
                        <p>Already have an account? <a href="/login">Login</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../partials/footer.ejs') %>